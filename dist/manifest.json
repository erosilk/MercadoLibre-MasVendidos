{
  "manifest_version": 2,
  "name": "MercadoLibre Más Vendidos",
  "author": "Leonardo Galante",
  "short_name": "Más Vendidos",
  "version": "1.0.0",
  "description": "Busca los artículos más vendidos en MercadoLibre con esta extensión",
  "homepage_url": "https://mercadolibre-masvendidos.now.sh",
  "icons": {
    "16": "assets/mercado-libre_16.png",
    "48": "assets/mercado-libre_48.png",
    "128": "assets/mercado-libre_128.png"
  },
  "browser_action": {
    "default_title": "Busca los más vendidos",
    "default_icon": "assets/mercado-libre_128.png",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mercadolibre.com.ar/*",
        "*://*.mercadolibre.com.bo/*",
        "*://*.mercadolivre.com.br/*",
        "*://*.mercadolibre.cl/*",
        "*://*.mercadolibre.com.co/*",
        "*://*.mercadolibre.co.cr/*",
        "*://*.mercadolibre.com.do/*",
        "*://*.mercadolibre.com.ec/*",
        "*://*.mercadolibre.com.gt/*",
        "*://*.mercadolibre.com.hn/*",
        "*://*.mercadolibre.com.mx/*",
        "*://*.mercadolibre.com.ni/*",
        "*://*.mercadolibre.com.pa/*",
        "*://*.mercadolibre.com.py/*",
        "*://*.mercadolibre.com.pe/*",
        "*://*.mercadolivre.pt/*",
        "*://*.mercadolibre.com.sv/*",
        "*://*.mercadolibre.com.uy/*",
        "*://*.mercadolibre.com.ve/*"
      ],
      "js": [
        "src/content-script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}